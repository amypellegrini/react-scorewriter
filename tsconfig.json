{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./lib",
    "declaration": true,
    "lib": ["ES2015", "ES6"],
    "types": ["node", "jest"]
  },
  "include": ["./src"],
  "exclude": ["./**/__tests__/*", "./**/*.stories.tsx"]
}
