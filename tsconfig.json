{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./lib",
    "declaration": true,
    "lib": ["ES6", "DOM"],
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src"],
  "exclude": ["./**/__tests__/*", "./**/*.stories.tsx"]
}
